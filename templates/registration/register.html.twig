{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="gauche">
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
        <h1 class="h3-mb-3-font-weight-normal">Bienvenue sur Age Of Champagne</h1>
        <h2>Le site officiel du jeu de plateau</h2>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.login, {
            label: 'Identifiant'
        }) }}
        {{ form_row(registrationForm.email, {
            label: 'Adresse Mail'
        }) }}
        {{ form_row(registrationForm.date_naiss, {
            label: 'Date de naissance'
        }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.agreeTerms, {
            label: "Acceptez les conditions d'utilisations"
        }) }}

        <button type="submit" class="btn">S'inscrire</button>
    {{ form_end(registrationForm) }}</div>
    <div class="droite"><div class="AOC"></div> </div>
{% endblock %}
